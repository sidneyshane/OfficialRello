<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45556B"
    tools:context=".eventsActivity">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/results"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browse_event_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_list"
        android:layout_width="328dp"
        android:layout_height="429dp"
        android:layout_marginBottom="92dp"
        android:divider="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bottom_toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#5D6C85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/chats_btn"
        android:layout_width="103dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="#0045556B"
        android:tint="#FFC107"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_toolbar"
        app:layout_constraintStart_toEndOf="@+id/groups_btn"
        app:layout_constraintTop_toTopOf="@+id/bottom_toolbar"
        app:srcCompat="@android:drawable/sym_action_chat"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/groups_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#0045556B"
        android:tint="#FFC107"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_toolbar"
        app:layout_constraintStart_toEndOf="@+id/events_btn"
        app:layout_constraintTop_toTopOf="@+id/bottom_toolbar"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/events_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#0045556B"
        android:tint="#FFC107"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_toolbar"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/calendar_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#0045556B"
        android:tint="#FFC107"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/chats_btn"
        app:layout_constraintTop_toTopOf="@+id/bottom_toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FFC107"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:text="@string/events"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_events_et"
        android:layout_width="274dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/search_events"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/event_search_btn"
        android:layout_width="74dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="#7F99BE"
        android:text="@string/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_events_et"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/browse_event_btn"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="24dp"
        android:background="#7F99BE"
        android:text="@string/browse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_events_et" />

    <Button
        android:id="@+id/create_event_btn"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="#7F99BE"
        android:text="@string/create_an_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/browse_event_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_events_et" />

</androidx.constraintlayout.widget.ConstraintLayout>